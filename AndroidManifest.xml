<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project2013"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:hasCode="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:requiredForAllUsers="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.project2013.MainActivity"
            android:label="@string/name_shown" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.project2013.ContactContentActivity"
            android:label="@string/name_shown"
            android:parentActivityName="com.example.project2013.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.project2013.MainActivity" />
        </activity>
        <activity
            android:name="com.example.project2013.NewContentActivity"
            android:label="@string/name_shown" >
        </activity>
        <activity
            android:name="com.example.project2013.AgendaContentActivity"
            android:label="@string/name_shown" >
        </activity>
        <activity
            android:name="com.example.project2013.AddContactActivity"
            android:label="@string/title_activity_add_contact" >
        </activity>
        <activity
            android:name="com.example.project2013.UpdateContactActivity"
            android:label="@string/title_activity_modify_contact" >
        </activity>
        <activity
            android:name="com.example.project2013.AddTaskActivity"
            android:label="@string/title_activity_new_task" >
        </activity>
        <activity
            android:name="com.example.project2013.UpdateTaskActivity"
            android:label="@string/title_activity_update_task" >
        </activity>
        <activity
            android:name="com.example.project2013.AddNewActivity"
            android:label="@string/title_activity_add_new" >
        </activity>
        <activity
            android:name="com.example.project2013.UpdateNewActivity"
            android:label="@string/title_activity_update_new" >
        </activity>
    </application>

</manifest>